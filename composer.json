{
    "name": "1cart/sdk-php",
    "license": "MIT",
    "type": "library",
    "description": "A PHP SDK used to communicate with 1cart API",
    "autoload": {
        "psr-4": { "OneCart\\Api\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "OneCart\\Tests\\Api\\": "tests" }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://git.fsi.pl"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "phpstan/phpstan": "^0.10",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "config": {
        "bin-dir": "vendor/bin",
        "sort-packages": true
    },
    "suggests": {
        "php-http/httplug": "Provides adapters for different HTTP libraries"
    }
}
